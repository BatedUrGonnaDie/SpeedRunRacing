= provide(:title, @game.name)
.row
  %h2.col-md-9= "#{@game.name} (#{@game.shortname})"
  %img.col-md-3{src: @game.cover_large}

.col-md-12
  #category-tabs
    %ul.nav.nav-tabs
      - @game.categories.each_with_index do |c, i|
        %li{'class' => "#{i==0 ? 'active' : ''}"}
          %a{'href' => "##{c.id}", 'data-toggle' => 'tab'}= c.name
    .tab-content
      - @game.categories.each_with_index do |c, i|
        .tab-pane{'id' => "#{c.id}", 'class' => "#{i==0 ? 'active' : ''}"}
          %h3
            %button{'class' => 'btn btn-default btn-create-race', 'data-category' => "#{c.id}"}
              = "Create Race for #{c.name}"
          = "Insert races for #{c.name}"

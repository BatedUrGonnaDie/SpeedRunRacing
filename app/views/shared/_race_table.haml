.panel.panel-default
  .panel-heading Active Races
  .panel-body
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th Game & Category
          %th
          %th Entrants
          %th Status
          %th Time
      %tbody
        - @races.each do |race|
          %tr{'data-href' => "#{race_path(race)}"}
            %td
              %img{src: race.game.cover_small}
            %td= link_to "#{race.game.name} - #{race.category.name}", race_path(race)
            %td= race.entrants.count
            %td{class: race_color(race)}= race.status_text
            %td
              - if race.started?
                .updating-time{data: {duration: race.duration}}= race.start_time
              - else
                = "-"

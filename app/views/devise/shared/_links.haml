#device-links
  - if controller_name != 'sessions'
    = link_to "Sign In", new_session_path(resource_name), class: "btn btn-info"

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info"

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-info"

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to "Resend Confirmation", new_confirmation_path(resource_name), class: "btn btn-info"

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to "Resend Unlock Instructions", new_unlock_path(resource_name), class: "btn btn-info"
